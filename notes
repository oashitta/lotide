const eqArrays = function (arr1, arr2){
  // compare length of arrays
  if(arr1.length !== arr2.length){
    return false;
  }

  // compare content of arrays
  for(let i = 0; i < arr1.length; i++){
    if (arr1[i] !== arr2[i]){
      return false;
    }
  };
  return true;
};

const assertEqual = function(actual, expected) {
  if (actual === expected) {
    console.log(`✅✅✅ Assertion Passed: ${actual} === ${expected}`);
  } else {
    console.log(`❌❌❌ Assertion failed: ${actual} !=== ${expected}`);
  }
};

const eqObjects = function(obj1, obj2){
  // check that the objects have the same length. Since we cant use .length with objects as they are not iterable, we have to collect the keys in an array then calculate the length of the array and store that in a variable.
  const firstObject = Object.keys(obj1);
  const secondObject = Object.keys(obj2);
  // console.log(firstObject)
  // console.log(secondObject)

// check  if the arrays are the same length. if they are continue checks, if not return false and end 
 if (firstObject.length !== secondObject.length){
  return false;
 }


    // return true;
    // if length are the same then check that the keys in both arrays are the same by looping through the array.
    for (let key in firstObject){
      if (Array.isArray(firstObject[key]) === Array.isArray(secondObject[key])){
        return true;
      }
    }
  return false;
  // check that the objects have the same key/value pairs

}

const shirtObject = { color: "red", size: "medium", length: "medium" };
const anotherShirtObject= { size: "medium", color: "red" };
const longSleeveShirtObject= { size: "medium", color: "red", sleeveLength: "long" };
console.log(eqObjects(shirtObject , anotherShirtObject))
console.log(eqObjects(shirtObject , longSleeveShirtObject))


console.log(assertEqual(eqObjects(shirtObject , anotherShirtObject), true));
console.log(assertEqual(eqObjects(shirtObject , longSleeveShirtObject), false));

// multicolor shirts test

const multiColorShirtObject = { colors: ["red", "blue"], size: "medium" };
const anotherMultiColorShirtObject = { size: "medium", colors: ["red", "blue"] };
console.log(eqObjects(multiColorShirtObject  , anotherMultiColorShirtObject)); // => true
console.log(assertEqual(eqObjects(multiColorShirtObject  , anotherMultiColorShirtObject), true));

const longSleeveMultiColorShirtObject= { size: "medium", colors: ["red", "blue"], sleeveLength: "long" };
console.log(eqObjects(multiColorShirtObject  , longSleeveMultiColorShirtObject)); // => false
console.log(assertEqual(eqObjects(multiColorShirtObject  , longSleeveMultiColorShirtObject), false));